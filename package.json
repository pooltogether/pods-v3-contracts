{
  "name": "pods-contracts",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "launch": "hardhat launch",
    "verify": "yarn hint && yarn test",
    "build": "hardhat compile",
    "compile": "hardhat --show-stack-traces --max-memory 8192 compile",
    "test": "hardhat test",
    "deploy": "hardhat deploy",
    "hint": "solhint \"contracts/**/*.sol\"",
    "coverage": "yarn hardhat coverage",
    "full-coverage": "yarn clean && USE_LITERAL_CONTENT=false node --max-old-space-size=4096 ./node_modules/.bin/hardhat coverage --temp build",
    "clean": "rm -rf artifacts build .build-openzeppelin cache coverage coverage.json test-results.xml .cache-openzeppelin abis deployments/localhost deployments/localhost_*",
    "remove-logs": "yarn run hardhat remove-logs",
    "chain": "./scripts/chain.sh",
    "fork-run": "hardhat run --network localhost",
    "fork-setup": "./scripts/setup_fork.sh",
    "fork-test-pods": "./scripts/test_all_pods.sh",
    "fork-test": "yarn fork-setup ; yarn fork-test-pods"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@pooltogether/pooltogether-contracts": "^3.3.8",
    "chai": "^4.2.0",
    "chalk": "4.0.0",
    "dotenv": "^8.2.0",
    "eth-gas-reporter": "^0.2.22",
    "ethereum-waffle": "^3.1.2",
    "ethers": "5.0.30",
    "hardhat": "2.0.11",
    "hardhat-deploy": "^0.7.0-beta.49",
    "hardhat-log-remover": "^2.0.0",
    "mocha-junit-reporter": "^2.0.0",
    "solc": "^0.7.4",
    "solidity-coverage": "^0.7.16",
    "solium": "^1.2.5"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^3.4.0",
    "@pooltogether/fixed-point": "^1.0.0",
    "hardhat-dependency-compiler": "^1.1.1",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-gas-reporter": "^1.0.4",
    "lowdb": "^1.0.0",
    "solhint": "3.0.0"
  }
}
